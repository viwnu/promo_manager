{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/promo_manager",
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "library",
      "root": "libs/shared/auth",
      "entryFile": "index",
      "sourceRoot": "libs/shared/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/auth/tsconfig.lib.json"
      }
    },
    "api-doc": {
      "type": "library",
      "root": "libs/shared/api-doc",
      "entryFile": "index",
      "sourceRoot": "libs/shared/api-doc/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/api-doc/tsconfig.lib.json"
      }
    },
    "logger": {
      "type": "library",
      "root": "libs/shared/logger",
      "entryFile": "index",
      "sourceRoot": "libs/shared/logger/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/logger/tsconfig.lib.json"
      }
    },
    "serializer": {
      "type": "library",
      "root": "libs/shared/serializer",
      "entryFile": "index",
      "sourceRoot": "libs/shared/serializer/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/serializer/tsconfig.lib.json"
      }
    },
    "decorators": {
      "type": "library",
      "root": "libs/shared/decorators",
      "entryFile": "index",
      "sourceRoot": "libs/shared/decorators/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/decorators/tsconfig.lib.json"
      }
    }
  }
}